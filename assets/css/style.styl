    font-family $openSans

.section-map
  padding 0
#map
  height 350px
  width 100%

.section-contact
  padding-top 60px
  padding-bottom 70px
  background $whiteSmoke
  button
    max-width 300px
    margin-left auto
    margin-right auto
    margin-top 20px

.wrapper-contact
  display flex
  flex-direction column
  > span, > h2, > p
    text-align center
  > h2
    margin 0 0 10px
    font-size 28px
    font-weight 700
  > p
    font-size 18px 
    font-weight 400
    font-family $openSans
    color $grey
    margin 0
  span
