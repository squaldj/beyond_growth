  > input[name='email']
    width calc(50% - 5px)
    margin-left 5px
    max-height 44px
  > input[name='subject']
    width 100%
    max-height 44px
  > textarea
    width 100%
    min-height 165px

.section-footer
  padding-top 50px
  padding-bottom 50px

.wrapper-footer
  display flex
  justify-content center
  align-items center
  background white
  img
    width 75px
    height auto
    margin-left 30px
  span
    font-size 14px
    font-family $openSans
    font-weight 400
    color $grey
  
