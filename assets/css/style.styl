.section-testimonial
  padding-top 70px
  .swiper-container
    width 100%
    height 400px
  .swiper-slide
    display grid
    grid-template-columns 1fr 1fr 1fr
    grid-gap 22px
    &:before
      display none

.item-testimonial
  width 100%
  display flex
  flex-direction column
  height 100%
  h3,span
    color $black
    text-align center !important
  h3
    font-weight 700 !important
    font-size 22px
    margin-top 5px !important
  span
    font-family $openSans
    font-weight 400
    color $grey
    font-size 14px
  .testimonial
    background $blue
    padding 20px
    color white
    position relative
    z-index 2
    text-align center
    line-height 26px
    font-size 15px
    font-style italic
    &:after
      content ''
      width: 0;
      height: 0;
      border-left: 50px solid transparent;
      border-right: 50px solid transparent;
      border-top: 100px solid $blue;
      position absolute
      left 50%
      top 50%
      transform translateX(-50%)
      z-index -1

.testimonial-image
  width 75px
  height 75px
